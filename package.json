{
  "name": "wavchatbot",
  "version": "1.0.0",
  "description": "Fred Wav Chatbot - Monorepo with Next.js web app, Discord bot, and RAG system",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter web dev",
    "build": "pnpm --filter web build",
    "start": "pnpm --filter web start",
    "lint": "pnpm --filter web lint",
    "discord": "pnpm --filter discord-bot start",
    "ingest": "node scripts/ingest.js"
  },
  "workspaces": [
    "apps/*"
  ],
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "dotenv": "^16.0.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.0",
    "openai": "^4.0.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}